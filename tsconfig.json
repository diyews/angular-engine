{
  "compilerOptions": {
    "outDir": "./output/",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "experimentalDecorators": true
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
